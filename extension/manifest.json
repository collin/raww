{
  "name": "Sous",
  "version": "1.2",
  "description": "Your personal grocery shopping assistant",
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "http://drsous.herokuapp.com/*",
    "https://drsous.herokuapp.com/*",
    "cookies"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon.png"
    },
    "default_title": "Sous",
    "default_popup": "./Popup/popup.html"
  },
  "web_accessible_resources": [
    "./Dependencies/semantic.min.css", "./Dependencies/semantic.min.js"
  ],
  "background": {
    "scripts": ["./Dependencies/jquery.min.js", "./BackgroundScripts/background.js"],
    "persistent": true
  },
  "manifest_version": 2
}
